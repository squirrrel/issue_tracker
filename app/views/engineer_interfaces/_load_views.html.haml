- @tickets.each do |ticket|
 %div 
  %table
   %tbody
    %tr
     %td{ style: 'font-size: 20px;color:black;font-family: "Courier New", Courier, monospace;'}
      = ticket.subject 
     %td{ style: 'font-size: 16px;color:grey;font-family: "Courier New", Courier, monospace;'}
      = ticket.ref_number
     %td
      = link_to('Edit', {action: 'edit', id: ticket.id}, method: :get, 'content-type' => 'text/javascript', remote: true) 
    %tr 
     %td{ style: 'font-size: 13px;color:green;font-family: "Courier New", Courier, monospace'}
      = ticket.department  
     %td{ style: 'font-size: 13px;color:green;font-family: "Courier New", Courier, monospace'}
      = ticket.customer_name 
     %td{ style: 'font-size: 13px;color:green;font-family: "Courier New", Courier, monospace'} 
      = ticket.customer_email
    %tr 
     %td{ style: 'font-size: 13px;color:green;font-family: "Courier New", Courier, monospace;font-weight: bold;'}
      = ticket.status
     %td{ style: 'font-size: 13px;color:green;font-family: "Courier New", Courier, monospace;font-weight: bold;'}
      = "Owner: #{ticket.owner ? (ticket.owner) : 'none'}"    
 %div{ style: 'font-size: 13px;color:grey;font-family: "Courier New", Courier, monospace'} 
  = ticket.body
 %br 
 %div{ style: 'font-size: 13px;color:green;font-family: "Courier New", Courier, monospace'} 
  - ticket.comments.each do |comment|
   =comment.body
   %br
   %br
   =comment.current_user_or_customer_name
   %br
 #reply
 %br      